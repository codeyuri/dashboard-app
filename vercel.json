{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
      },
      {
        "src": "server/package.json",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "server/index.js",
        "methods":["GET","POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
        "headers":{
          "Access-Control-Allow-Origin": "*"
        }
      },
      { "src": "/(.*)", "dest": "client/index.html" }
    ]
  }